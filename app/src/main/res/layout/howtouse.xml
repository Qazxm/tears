<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Howtouse">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto">

		<RelativeLayout
			android:id="@+id/howtouse_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp">

			<ImageView
				android:id="@+id/background"
				android:src="@drawable/background"
				android:contentDescription="background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginRight="0dp"
				android:scaleType="fitXY" />



			<ImageView android:id="@+id/logo2"
				android:src="@drawable/logo2"
				android:contentDescription="logo2"
				android:layout_marginStart="74dp"
				android:layout_marginTop="44dp"
				android:layout_width="44dp"
				android:layout_height="44dp" />

			<ImageView android:id="@+id/kwlogo"
				android:src="@drawable/kwlogo"
				android:contentDescription="kwlogo"
				android:layout_marginStart="-4dp"
				android:layout_marginTop="34dp"
				android:layout_width="87.62dp"
				android:layout_height="64dp" />

			<ImageView android:id="@+id/bsllogo"
				android:src="@drawable/bsllogo"
				android:contentDescription="bsllogo"
				android:layout_marginStart="74dp"
				android:layout_marginTop="45dp"
				android:layout_width="45dp"
				android:layout_height="43.84dp" />

			<TextView
				android:id="@+id/_2024capstone"
				android:layout_gravity="center_horizontal|center"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/_bg__firstpage1_color"
				android:layout_marginLeft="220dp"
				android:layout_marginTop="58dp"
				android:layout_width="183.2dp"
				android:layout_height="23.2dp"
				android:text="@string/_2024capstone_string"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<View
				android:id="@+id/top"
				android:layout_width="match_parent"
				android:layout_height="25dp"
				android:background="@drawable/top"
				android:layout_alignParentTop="true"
				android:layout_alignParentStart="true" />

			<View
				android:id="@+id/bottom"
				android:layout_width="match_parent"
				android:layout_height="25dp"
				android:layout_marginBottom="0dp"
				android:background="@drawable/bottom"
				android:layout_alignParentBottom="true"
				android:layout_alignParentStart="true" />

			<View   android:id="@+id/howtousebox"
				android:background="@drawable/howtousebox"
				android:layout_marginStart="80dp"
				android:layout_marginTop="155dp"
				android:layout_width="274dp"
				android:layout_height="60dp" />

			<TextView android:id="@+id/howtousetext"
				android:layout_gravity="center_horizontal|center"
				android:gravity="center"
				android:textSize="30sp"
				android:textColor="@color/howtousetext_color"
				android:layout_marginLeft="120dp"
				android:layout_marginTop="160dp"
				android:layout_width="182dp"
				android:layout_height="49dp"
				android:text="@string/howtousetext_string"
				/>

			<View   android:id="@+id/textbox"
				android:background="@drawable/textbox"
				android:alpha="0.15999999642372"
				android:layout_marginStart="60dp"
				android:layout_marginTop="300dp"
				android:layout_width="300dp"
				android:layout_height="330dp" />

			<TextView android:id="@+id/text"
				android:layout_gravity="center_horizontal|center"
				android:gravity="center"
				android:textSize="30sp"
				android:textColor="@color/capstonetext_color"
				android:layout_marginLeft="60dp"
				android:layout_marginTop="300dp"
				android:layout_width="288dp"
				android:layout_height="309dp"
				android:text="@string/text_string"
				/>


			<RelativeLayout
				android:id="@+id/group_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_marginEnd="0dp">


				<View
					android:id="@+id/front"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:layout_marginStart="60dp"
					android:layout_marginTop="750dp"
					android:layout_marginBottom="0dp"
					android:background="@drawable/front" />


			</RelativeLayout>

			</RelativeLayout>


			<ImageButton
				android:id="@+id/back2_button"
				android:layout_marginTop="750dp"
				android:layout_marginStart="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/back"
				android:background="@android:color/transparent"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:contentDescription="TODO" />

		</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
